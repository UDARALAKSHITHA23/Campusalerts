<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Campusalerts" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary branding color -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>

        <!-- Optional: additional recommended attributes -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/lavender</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/lavender</item>
        <item name="android:navigationBarColor">@color/lavender</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Campusalerts.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Campusalerts.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Campusalerts.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
